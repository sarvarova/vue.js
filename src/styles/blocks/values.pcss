.values {
  margin-bottom: 300px;

  @include phones {
    margin-bottom: 75px;
  }
}

.values__container {
  position: relative;

  @include tablets {
    padding-bottom: 350px;
  }

  &:before {
    content: "";
    position: absolute;
    background: url('~images/content/bag.jpg') left bottom / contain no-repeat;
    display: block;
    bottom: 5%;
    height: 79%;
    width: 69%;
    left: -32%;

    @include tablets {
      bottom: 0;
      left: 50%;
      height: 300px;
      transform: translateX(-50%);
      background-position: center center;
    }

    @include phones {
      width: 100%;
    }
  }
}

.values__wrapper {
  position: relative;
}

.values__title {
  margin-bottom: 82px;
  display: flex;
  justify-content: center;

  @include tablets {
    width: 100%;
    text-align: center;
    margin-right: 0;
  }
}

.values__title-container {
  width: 47%;

  @include desktop {
    width: 42%;
    margin-left: 0;
  }
  @include tablets {
    width: 68%;
    text-align: center;
  }
  @include phones {
    width: 100%;
    margin-left: 0;
    text-align: left;
  }
}

.values__title-text {
  font-size: 30px;
  font-weight: 700;
  margin-bottom: 55px;

  @include tablets {
    width: 100%;
  }
}

.values__content {
  width: 105%;
  color: rgba($text-color, .5);
  font-weight: 600;
  line-height: 1.8;
}

.values__widget {
  display: flex;
  justify-content: flex-end;
  margin-right: -18%;

  @include tablets {
    justify-content: center;
  }
}

.values__widget-container {
  width: 66%;

  @include tablets {
    width: 95%;
  }
}